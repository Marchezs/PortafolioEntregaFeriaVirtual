@model FeriaVirtualFinal.Negocio.Productor
@{
    ViewBag.Title = "Edit";
}



<div id="listarproducto1">
    @using (Html.BeginForm())
    {



        <div class="login">


            <h2 class="login-header">Modificar Productor</h2>
            @Html.HiddenFor(l => l.ProductorId)
            <p style="padding-left:50px;width : 400px; height: 50px"><input placeholder="Nombre" @Html.TextBoxFor(l => l.ProductorNom)></p>
            <p style="padding-left:50px;width : 400px; height: 50px"><input placeholder="Rut" @Html.TextBoxFor(l => l.ProductorRut)></p>
            <p style="padding-left:50px;width : 400px; height: 50px"><input placeholder="Direccion" @Html.TextBoxFor(l => l.ProductorDirec)></p>
            <p style="padding-left:50px;width : 400px; height: 50px"><input placeholder="Telefono" @Html.TextBoxFor(l => l.ProductorTelef)></p>
            <p style="padding-left:50px;width : 400px; height: 50px"><input placeholder="Email" @Html.TextBoxFor(l => l.ProductorMail)></p>
            <p style="padding-left:50px;width : 400px; height: 50px"><input type="submit" value="Modificar"></p>









        </div>



    }
    <br />
    <div class="alert alert-danger">@Html.ValidationSummary()</div>

</div>
