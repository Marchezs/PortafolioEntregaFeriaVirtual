@using FeriaVirtualFinal.Negocio;
@{
    ViewBag.Title = "Index";
}

<h2 class="login-header">Lista de productos</h2>

@{List<Producto> productos = (List<Producto>)ViewBag.productos;}


<table class="card-body" id="createproductor">
    <tr>
        <th>Nombre</th>
        <th>Datos</th>
        <th>Precio</th>
        <th>Moneda</th>
        <th>Opciones</th>

    </tr>

    @foreach (var producto in productos)
    {
        <tr>

            <td>@producto.ProductoNomb</td>
            <td>@producto.ProductoDatos</td>
            <td>@producto.ProductoPrecio</td>
            <td>Dolar</td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = producto.ProductoId })
                @Html.ActionLink("Modificar", "Edit", new { id = producto.ProductoId })
            </td>








        </tr>

    }

</table>

<div class="alert alert-success">@TempData["mensaje"]</div>