<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              
            </div>
            <div class="navbar-collapse collapse">


                <ul class="nav navbar-nav">
                    @Html.ActionLink("Maipo Grande", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>

                        </li>
                        <li>
                            @Html.ActionLink("Cerrar Sesion", "LogOut", "Auth")
                        </li>
                        <li>
                            <a href="#">@User.Identity.Name</a>
                        </li>


                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Iniciar Sesion", "Login", "Auth")
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>






    <div>


        @RenderBody()
        


    </div>
    <div class="footer-dark" id="fodertotal">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Servicios</h3>
                        <ul>
                            <li><a href="#">Cliente</a></li>
                            <li><a href="#">Transportista</a></li>
                            <li><a href="#">Productores</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Sobre</h3>
                        <ul>
                            <li><a href="#">Compañia</a></li>
                            <li><a href="#">Grupo</a></li>
                            
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>Feria Virtual Maipo Grande</h3>
                        <p>Somos una empresa dedicada a la venta de de Frutas de Mercados Libre Maipo Grande.</p>
                    </div>
                    
                </div>
                <p class="copyright" style="color:white">ASP.NET © 2021</p>
            </div>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>